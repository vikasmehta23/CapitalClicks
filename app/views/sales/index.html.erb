<p id="notice"><%= notice %></p>

<section class="mbr-section mbr-section-small" id="form1-8" data-rv-view="8" style="background-color: rgb(251, 242, 190); padding-top: 6rem; padding-bottom: 6rem;">
    
    <div class="container">
        <div class="row">
            <div data-form-type="formoid">


<h2 class="mbr-section-title display-3 text-xs-center">Sales</h2>

<table>
  <thead>
    <tr>
      <th width="200px">Gstin uin</th>
      <th width="300px">Name      </th>
      <th width="200px">Invoice no    </th>
      <th width="300px">Invoice date  </th>
      <th width="700px">Invoice Value  </th>
      <th width="300px">Place of Supply </th>
      <th width="800px">Taxable Value    </th>
      <th width="300px">CGST  </th>
      <th width="300px">SGST  </th>
      <th width="300px">IGST </th>
    </tr>
  </thead>

  <tbody>
    <% @saleshasharray.each do |sale| %>
      <tr>
        <td width="200px"><%= sale["BUYER_GSTIN_UIN"] %></td>
        <td width="1000px"><%= sale["BUYER_NAME"] %></td>
        <td width="200px"><%= sale["INVOICE_NO"] %></td>
        <td width="300px"><%= sale["INVOICE_DATE"] %></td>
        <td width="300px"><%= sale["total_amount"] %></td>
        <td width="1000px"><%= sale["PLACE_OF_SUPPLY"] %></td>
         <td width="200px"><%= sale["Tax_Amount"] %></td>
        <td width="300px"><%= sale["total_CGST"] %></td>
        <td width="300px"><%= sale["total_SGST"] %></td>
        <td width="500px"><%= sale["total_IGST"] %></td>

        <td width="500px"><%= link_to "Download", download_sale_path(id: sale['SaleObject'].id) %></td>
        <td width="200px"><%= link_to 'Show', sale['SaleObject'] %></td>
        <td width="200px"><%= link_to 'Edit', edit_sale_path(sale['SaleObject']) %></td>
        <td width="200px"><%= link_to 'Destroy', sale['SaleObject'], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
 <div class="mbr-buttons--center"><a class="btn btn-lg btn-black-outline btn-black" href="/sales/new"><span class="mbri-login mbr-iconfont mbr-iconfont-btn"></span>New sale</a> </div>

 <div class="mbr-buttons--center"><a class="btn btn-lg btn-black-outline btn-black" href="/sales/downloadsummary"><span class="mbri-login mbr-iconfont mbr-iconfont-btn"></span>Download Summary</a> </div>
             </div>
        </div>
    </div>
</section>